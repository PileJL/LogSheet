<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeekLogs"
    android:background="@drawable/profile_bg">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:src="@drawable/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/pageTitle"
        android:text="September 2021 - Week 1"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        style="@style/header_text_style"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/day1"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        style="@style/week_log_cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_edge_gradient_blue"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:text="Day 1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/week_logs_style" />

            <ImageView
                android:id="@+id/deleteButton1"
                android:src="@drawable/circled_delete_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/week_logs_delete_button_style" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/day2"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/day1"
        android:layout_marginTop="10dp"
        style="@style/week_log_cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_edge_gradient_blue"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:text="Day 2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/week_logs_style" />

            <ImageView
                android:id="@+id/deleteButton2"
                android:src="@drawable/circled_delete_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/week_logs_delete_button_style" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/day3"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/day2"
        android:layout_marginTop="10dp"
        style="@style/week_log_cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_edge_gradient_blue"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:text="Day 3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/week_logs_style" />

            <ImageView
                android:id="@+id/deleteButton3"
                android:src="@drawable/circled_delete_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/week_logs_delete_button_style" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/day4"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/day3"
        android:layout_marginTop="10dp"
        style="@style/week_log_cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_edge_gradient_blue"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:text="Day 4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/week_logs_style" />

            <ImageView
                android:id="@+id/deleteButton4"
                android:src="@drawable/circled_delete_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/week_logs_delete_button_style" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
<!--day 5-->
    <androidx.cardview.widget.CardView
        android:id="@+id/day5"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/day4"
        android:layout_marginTop="10dp"
        style="@style/week_log_cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_edge_gradient_blue"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:text="Day 5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/week_logs_style" />

            <ImageView
                android:id="@+id/deleteButton5"
                android:src="@drawable/circled_delete_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/week_logs_delete_button_style" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
<!--    day 6-->
    <androidx.cardview.widget.CardView
        android:id="@+id/day6"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/day5"
        android:layout_marginTop="10dp"
        style="@style/week_log_cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_edge_gradient_blue"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:text="Day 6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/week_logs_style" />

            <ImageView
                android:id="@+id/deleteButton6"
                android:src="@drawable/circled_delete_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/week_logs_delete_button_style" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
<!--    day 7-->
    <androidx.cardview.widget.CardView
        android:id="@+id/day7"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/day6"
        android:layout_marginTop="10dp"
        style="@style/week_log_cardview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_edge_gradient_blue"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:text="Day 7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/week_logs_style" />

            <ImageView
                android:id="@+id/deleteButton7"
                android:src="@drawable/circled_delete_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/week_logs_delete_button_style" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>