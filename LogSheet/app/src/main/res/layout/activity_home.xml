<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/home_bg1">

<!--    trivia pop-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/triviaOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_color"
        android:elevation="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/gradient_blue_no_shadow"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/triviaCloseButton"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/white_close_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"/>
            <!--            trivia message-->
            <TextView
                android:id="@+id/triviaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Trivia"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/triviaMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/triviaLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="The gluteus maximus is the largest muscle in the body, located in the buttocks and responsible for hip extension."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    notif popup-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notifOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_color"
        android:elevation="2dp"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/gradient_blue_no_shadow"
            android:paddingVertical="20dp">
            <ImageView
                android:layout_width="230dp"
                android:layout_height="170dp"
                android:src="@drawable/arms_with_dumbbell"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="-20dp"
                android:alpha="0.3"/>
<!--            notif message-->
            <TextView
                android:id="@+id/notifMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Wow! you did a great job this week. The result of your physical activity activeness is that you spent [12 hours] enagaging in Physical Activity but unfortunately you only engaged in [jogging with low intensity]. This week you may try these exercise and increase the intensity to improve your physical activity, as this will help your endurance:"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/suggestedPA1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/notifMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="JOGGING"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/suggestedPA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/suggestedPA1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="JUMPING ROPE"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/notifOkayButton"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="Okay"
                app:layout_constraintTop_toBottomOf="@id/suggestedPA2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="15dp"
                android:textSize="13sp"
                style="@style/main_button_style"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    side nav-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/overlay_color"
        android:elevation="1dp"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sideNav"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/white_app_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="17sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/app_logo"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/userTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitness Enthusiast"
                android:textSize="9sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userName"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/inter_regular"/>

<!--            home-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/userTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/homeIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/home_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="@color/yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="15sp"
                    android:textColor="@color/main_yellow"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/homeIcon"
                    app:layout_constraintBottom_toBottomOf="@id/homeIcon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            profile-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/home"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/profile_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/profileIcon"
                    app:layout_constraintBottom_toBottomOf="@id/profileIcon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--            logs-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profile"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="22dp">

                <ImageView
                    android:id="@+id/logsIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/logs_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logs"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="9dp"
                    app:layout_constraintStart_toEndOf="@id/logsIcon"
                    app:layout_constraintBottom_toBottomOf="@id/logsIcon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

<!--            log out-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="22dp">

                <ImageView
                    android:id="@+id/logoutIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/logout_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginStart="9dp"
                    app:layout_constraintStart_toEndOf="@id/logoutIcon"
                    app:layout_constraintBottom_toBottomOf="@id/logoutIcon"
                    app:layout_constraintTop_toTopOf="@id/logoutIcon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    page contents-->
    <ImageView
        android:id="@+id/hamburgerIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/hamburger"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"/>

<!--    <ImageView-->
<!--        android:id="@+id/notifIcon"-->
<!--        android:layout_width="25dp"-->
<!--        android:layout_height="25dp"-->
<!--        android:src="@drawable/bell"-->
<!--        app:layout_constraintTop_toTopOf="@id/hamburgerIcon"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/hamburgerIcon"-->
<!--        android:layout_marginEnd="30dp"/>-->
    
    <TextView
        android:id="@+id/pageHeader"
        style="@style/header_text_style"
        android:text="Hello, User!"
        app:layout_constraintTop_toBottomOf="@id/hamburgerIcon"
        app:layout_constraintStart_toStartOf="@id/hamburgerIcon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/activenessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#676b72"
        android:fontFamily="@font/inter_regular"
        android:text="Activeness:"
        app:layout_constraintTop_toBottomOf="@id/pageHeader"
        app:layout_constraintStart_toStartOf="@id/pageHeader"
        android:layout_marginTop="-10dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/activeness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/activenessLabel"
        app:layout_constraintBottom_toBottomOf="@id/activenessLabel"
        app:layout_constraintTop_toTopOf="@id/activenessLabel"
        android:text="Active"
        android:fontFamily="@font/inter_bold"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:textColor="@color/green"/>


    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/activeness"
        android:layout_marginHorizontal="28dp"
        android:background="@drawable/search_field"
        android:layout_marginTop="15dp"
        android:hint="Search..."
        android:paddingStart="20dp"
        android:textColorHint="@color/white"
        android:fontFamily="@font/inter_regular"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:paddingVertical="3dp"
        android:maxLength="25"
        android:paddingEnd="50dp"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/searchButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/search_icon"
        app:layout_constraintTop_toTopOf="@id/searchBar"
        app:layout_constraintEnd_toEndOf="@id/searchBar"
        app:layout_constraintBottom_toBottomOf="@id/searchBar"
        android:layout_marginEnd="8dp"/>

<!--    recommended activities-->
    <TextView
        android:id="@+id/activitiesTitle"
        style="@style/header_text_style"
        android:text="Recommended Activities:"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="@id/hamburgerIcon"
        android:layout_marginTop="15dp"
        android:textSize="13sp"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activitiesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="29dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

<!--            acitvity 1-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity1"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/activity_box_style">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/vidImage1"
                    android:src="@drawable/cycling"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/activity_image_style" />

                <ImageView
                    android:id="@+id/playButton1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/play_button"
                    app:layout_constraintTop_toTopOf="@id/vidImage1"
                    app:layout_constraintBottom_toBottomOf="@id/vidImage1"
                    app:layout_constraintStart_toStartOf="@id/vidImage1"
                    app:layout_constraintEnd_toEndOf="@id/vidImage1"/>

                <TextView
                    android:id="@+id/activityTitle1"
                    android:text="Cycling"
                    app:layout_constraintTop_toBottomOf="@id/vidImage1"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/activity_title_style" />

                <TextView
                    android:text="Cycling improves cardiovascular health, strengthens leg muscles, and enhances endurance while being a low-impact exercise that's easy on the joints. It also helps burn calories, boosts mental well-being, and is an eco-friendly mode of transportation."
                    app:layout_constraintTop_toBottomOf="@id/activityTitle1"
                    style="@style/activity_desc_style" />

            </androidx.constraintlayout.widget.ConstraintLayout>

<!--            acitvity 2-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity2"
                app:layout_constraintTop_toBottomOf="@id/activity1"
                android:layout_marginTop="10dp"
                style="@style/activity_box_style">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/vidImage2"
                    android:src="@drawable/dancing"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/activity_image_style" />

                <ImageView
                    android:id="@+id/playButton2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/play_button"
                    app:layout_constraintTop_toTopOf="@id/vidImage2"
                    app:layout_constraintBottom_toBottomOf="@id/vidImage2"
                    app:layout_constraintStart_toStartOf="@id/vidImage2"
                    app:layout_constraintEnd_toEndOf="@id/vidImage2"/>

                <TextView
                    android:id="@+id/activityTitle2"
                    android:text="Dancing"
                    app:layout_constraintTop_toBottomOf="@id/vidImage2"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/activity_title_style" />

                <TextView
                    android:text="Dancing improves health, enhances coordination, and strengthens muscles while increasing flexibility and balance. It also boosts mood, reduces stress, and is a fun way to stay active."
                    app:layout_constraintTop_toBottomOf="@id/activityTitle2"
                    style="@style/activity_desc_style" />

            </androidx.constraintlayout.widget.ConstraintLayout>

<!--            acitvity 3-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity3"
                app:layout_constraintTop_toBottomOf="@id/activity2"
                android:layout_marginTop="10dp"
                style="@style/activity_box_style">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/vidImage3"
                    android:src="@drawable/jogging"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/activity_image_style" />

                <ImageView
                    android:id="@+id/playButton3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/play_button"
                    app:layout_constraintTop_toTopOf="@id/vidImage3"
                    app:layout_constraintBottom_toBottomOf="@id/vidImage3"
                    app:layout_constraintStart_toStartOf="@id/vidImage3"
                    app:layout_constraintEnd_toEndOf="@id/vidImage3"/>

                <TextView
                    android:id="@+id/activityTitle3"
                    android:text="Jogging"
                    app:layout_constraintTop_toBottomOf="@id/vidImage3"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/activity_title_style" />

                <TextView
                    android:text="Jogging keeps your heart strong, helps burn calories, and strengthens your legs. It also reduces stress and boosts your energy."
                    app:layout_constraintTop_toBottomOf="@id/activityTitle3"
                    style="@style/activity_desc_style" />

            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            activity 4-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity4"
                app:layout_constraintTop_toBottomOf="@id/activity3"
                android:layout_marginTop="10dp"
                style="@style/activity_box_style">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/vidImage4"
                    android:src="@drawable/jumping_jacks"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/activity_image_style" />

                <ImageView
                    android:id="@+id/playButton4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/play_button"
                    app:layout_constraintTop_toTopOf="@id/vidImage4"
                    app:layout_constraintBottom_toBottomOf="@id/vidImage4"
                    app:layout_constraintStart_toStartOf="@id/vidImage4"
                    app:layout_constraintEnd_toEndOf="@id/vidImage4"/>

                <TextView
                    android:id="@+id/activityTitle4"
                    android:text="Jumping Jacks"
                    app:layout_constraintTop_toBottomOf="@id/vidImage4"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/activity_title_style" />

                <TextView
                    android:text="Jumping jacks improve cardiovascular health, burn calories, and strengthen muscles while enhancing coordination and flexibility. They are a simple, full-body exercise that boosts endurance, reduces stress, and requires no equipment."
                    app:layout_constraintTop_toBottomOf="@id/activityTitle4"
                    style="@style/activity_desc_style" />

            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            activity 5-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity5"
                app:layout_constraintTop_toBottomOf="@id/activity4"
                android:layout_marginTop="10dp"
                style="@style/activity_box_style">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/vidImage5"
                    android:src="@drawable/walking"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/activity_image_style" />

                <ImageView
                    android:id="@+id/playButton5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/play_button"
                    app:layout_constraintTop_toTopOf="@id/vidImage5"
                    app:layout_constraintBottom_toBottomOf="@id/vidImage5"
                    app:layout_constraintStart_toStartOf="@id/vidImage5"
                    app:layout_constraintEnd_toEndOf="@id/vidImage5"/>

                <TextView
                    android:id="@+id/activityTitle5"
                    android:text="Walking"
                    app:layout_constraintTop_toBottomOf="@id/vidImage5"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/activity_title_style" />

                <TextView
                    android:text="Walking keeps your heart healthy, strengthens your legs, and helps burn calories. It also reduces stress and improves overall mood."
                    app:layout_constraintTop_toBottomOf="@id/activityTitle5"
                    style="@style/activity_desc_style" />

            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            activity 6-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity6"
                app:layout_constraintTop_toBottomOf="@id/activity5"
                android:layout_marginTop="10dp"
                style="@style/activity_box_style">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/vidImage6"
                    android:src="@drawable/pushup"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/activity_image_style" />

                <ImageView
                    android:id="@+id/playButton6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/play_button"
                    app:layout_constraintTop_toTopOf="@id/vidImage6"
                    app:layout_constraintBottom_toBottomOf="@id/vidImage6"
                    app:layout_constraintStart_toStartOf="@id/vidImage6"
                    app:layout_constraintEnd_toEndOf="@id/vidImage6"/>

                <TextView
                    android:id="@+id/activityTitle6"
                    android:text="Push up"
                    app:layout_constraintTop_toBottomOf="@id/vidImage6"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/activity_title_style" />

                <TextView
                    android:text="Push-ups build upper body strength, especially in the chest, shoulders, and arms. They also improve core stability and overall endurance."
                    app:layout_constraintTop_toBottomOf="@id/activityTitle6"
                    style="@style/activity_desc_style" />

            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            activity 7-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity7"
                app:layout_constraintTop_toBottomOf="@id/activity6"
                android:layout_marginTop="10dp"
                style="@style/activity_box_style">

                <com.google.android.material.imageview.ShapeableImageView
