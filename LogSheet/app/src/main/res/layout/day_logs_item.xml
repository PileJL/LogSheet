<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="18dp"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/soft_edge_gradient_blue"
        android:paddingTop="8dp"
        android:paddingBottom="11dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="February 2021 - Week 1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/intensityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intensity:"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"
            android:layout_marginTop="-2dp"/>

        <TextView
            android:id="@+id/intensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light"
            app:layout_constraintStart_toEndOf="@id/intensityLabel"
            app:layout_constraintTop_toTopOf="@id/intensityLabel"
            app:layout_constraintBottom_toBottomOf="@id/intensityLabel"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:textSize="11sp"
            android:layout_marginStart="5dp"/>
<!--        duration-->
        <TextView
            android:id="@+id/durationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            app:layout_constraintTop_toBottomOf="@id/intensityLabel"
            app:layout_constraintStart_toStartOf="@id/title"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"
            android:layout_marginTop="-4dp"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 hr and 30 mins"
            app:layout_constraintStart_toEndOf="@id/durationLabel"
            app:layout_constraintTop_toTopOf="@id/durationLabel"
            app:layout_constraintBottom_toBottomOf="@id/durationLabel"
            android:textColor="#aeb1b6"
            android:fontFamily="@font/inter_regular"
            android:textSize="11sp"
            android:layout_marginStart="5dp"/>
<!--        delete button-->
        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circled_delete_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>